<h1>UPDATE A PROJECT</h1>
<%= form_for(@project) do |f|%>
    <table summary='Project form fields'>
    <tr>
     <th>Name : </th>
     <td><%= f.text_field(:name)%></td>
    </tr>
    
    <tr>
    <th>Description : </th>
    <td><%= f.text_area(:description)%></td>
   </tr>

   <%= f.number_field(:user_id, class: 'esconder')%>

    
    </table>

    <% @providers.each do |provider| %>
      <%= hidden_field_tag "project[provider_ids][]", nil%>
      <%= check_box_tag 'project[provider_ids][]', provider.id , @project.provider_ids.include?(provider.id),id: dom_id(provider) %>
      <%= label_tag dom_id(provider), provider.name%><br>
    <% end %>
 
   <div class="form-buttons">
   <%= f.submit('Update project') %>
   </div>

<% end %>